<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:paddingTop="12dp">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/gambarSiswa"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/asu"
                            app:civ_border_color="#FF000000"
                            app:civ_border_width="0dp" />

                        <TextView
                            android:id="@+id/namaIndustri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_toRightOf="@+id/gambarSiswa"
                            android:text="PT. Bamboomedia" />

                        <TextView
                            android:id="@+id/alamatIndustri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/namaIndustri"
                            android:layout_marginBottom="8dp"
                            android:layout_toRightOf="@id/gambarSiswa"
                            android:text="Jl. Merdeka No. 18" />

                        <TextView
                            android:id="@+id/telpIndustri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/alamatIndustri"
                            android:layout_marginBottom="8dp"
                            android:layout_toRightOf="@+id/gambarSiswa"
                            android:text="081999589207" />

                        <TextView
                            android:id="@+id/emailIndustri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/telpIndustri"
                            android:layout_marginBottom="8dp"
                            android:layout_toRightOf="@+id/gambarSiswa"
                            android:text="bamboomedia@gmail.com" />

                        <TextView
                            android:id="@+id/kuotaIndustri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/emailIndustri"
                            android:layout_toRightOf="@+id/gambarSiswa"
                            android:text="Kuota 3 Orang" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimaryDark"
                            android:text="BATALKAN Pendaftaran"
                            android:textColor="#fff" />


                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>