<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zonamagang.zonamagang.register2">

    <EditText
        android:hint="E-mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/daftaremail"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="193dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:hint="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText7"
        android:layout_below="@+id/daftaremail"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:hint="Re-Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText8"
        android:layout_below="@+id/editText7"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editText7" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MENDAFTAR"
        android:id="@+id/button4"
        android:textSize="18dp"
        android:padding="15dp"
        android:layout_below="@+id/editText8"
        android:layout_marginTop="70dp"
        android:layout_alignEnd="@+id/editText8"
        android:background="@color/colorAccent"
        android:textColor="#fefefe"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DAFTAR"
        android:textSize="50dp"
        android:textAlignment="center"
        android:id="@+id/reg"
        android:layout_above="@+id/editText7"
        android:layout_marginBottom="62dp"
        android:layout_alignEnd="@+id/daftaremail"
        android:layout_alignParentStart="true" />

</RelativeLayout>
